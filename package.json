{
  "name": "dom-preview",
  "version": "0.0.0",
  "description": "A replacement for vitest-preview with a few more features.",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "scripts": {
    "test": "vitest run && tysc",
    "prebuild": "rm -rf dist",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build": "run-p build:*",
    "format": "prettier -w .",
    "dev:unit": "vitest --ui",
    "dev:live-server": "live-server .dom-preview",
    "dev": "run-p dev:*",
    "version": "node ./scripts/on-version-bump.js",
    "prepare": "./scripts/on-postinstall.sh",
    "postversion": "git push origin main --tags && npm publish"
  },
  "author": "Nils Knappmeier",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "10.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/jsdom": "21.1.6",
    "@types/node": "20.12.7",
    "@vitest/ui": "1.5.1",
    "jsdom": "24.0.0",
    "live-server": "1.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "typescript": "5.4.5",
    "vitest": "1.5.1"
  }
}
