{
  "name": "dom-preview-monorepo",
  "version": "0.1.1",
  "description": "A replacement for vitest-preview with more features.",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.js",
  "workspaces": [
    "packages/@dom-preview/ui",
    "packages/@dom-preview/server",
    "packages/dom-preview",
    "packages/playground"
  ],
  "type": "module",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "version": "node ./scripts/on-version-bump.js",
    "play:build-dom-preview": "npm run build --workspace=packages/dom-preview -- --watch",
    "play:build-ui": "npm run build --workspace=packages/@dom-preview/ui -- --watch",
    "play:build-server": "npm run build --workspace=packages/@dom-preview/server -- --watch",
    "play:run-server": "nodemon ./node_modules/.bin/dom-preview",
    "play:playground": "npm run dev:unit --workspace=packages/playground",

    "play": "run-p play:*",
    "prepare": "./scripts/on-prepare.sh",
    "postversion": "git push origin main --tags && npm publish"
  },
  "author": "Nils Knappmeier",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
