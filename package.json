{
  "name": "dom-preview",
  "version": "0.1.1",
  "description": "A replacement for vitest-preview with a few more features.",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "scripts": {
    "test": "vitest run && tsc --project tsconfig.json --noEmit",
    "prebuild": "rm -rf dist",
    "build:ui": "cd server/ui && vite build",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build": "run-p build:*",
    "format": "prettier -w .",
    "dev:unit": "vitest --ui",
    "dev:server": "nodemon --exec vite-node server/cli.ts",
    "dev:ui": "cd server/ui && vite",
    "dev": "run-p dev:*",
    "version": "node ./scripts/on-version-bump.js",
    "prepare": "./scripts/on-postinstall.sh && husky install",
    "postversion": "git push origin main --tags && npm publish"
  },
  "author": "Nils Knappmeier",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "10.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/jsdom": "21.1.6",
    "@types/node": "20.12.11",
    "@vitest/ui": "1.6.0",
    "eventsource": "2.0.2",
    "jsdom": "24.0.0",
    "lint-staged": "15.2.2",
    "lit-html": "3.1.3",
    "nodemon": "3.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "vite-node": "1.6.0",
    "vitest": "1.6.0"
  },
  "dependencies": {
    "sirv": "2.0.4"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
