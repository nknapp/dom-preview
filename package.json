{
  "name": "dom-preview-monorepo",
  "version": "0.1.1",
  "description": "A replacement for vitest-preview with more features.",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.js",
  "workspaces": [
    "packages/@dom-preview/ui",
    "packages/@dom-preview/server",
    "packages/dom-preview",
    "packages/playground"
  ],
  "type": "module",
  "scripts": {
    "format": "prettier",
    "build": "npm run build --workspaces --if-present",
    "version": "node ./scripts/on-version-bump.js",
    "play:server": "npm run dev:server --workspace=packages/@dom-preview/server",
    "play:ui": "npm run dev:server --workspace=packages/@dom-preview/ui",
    "play:playground": "npm run dev:unit --workspace=packages/playground",
    "play": "run-p play:*"
  },
  "author": "Nils Knappmeier",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "9.3.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "typescript-eslint": "7.10.0"
  }
}
