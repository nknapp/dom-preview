{
  "name": "dom-preview",
  "version": "0.2.2",
  "description": "A replacement for vitest-preview with more features.",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.mjs",
  "main": "./dist/index.cjs",
  "bin": {
    "dom-preview": "./dist/bin/server.cjs"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "test:unit": "vitest run",
    "test:ts": "tsc --project tsconfig.json --noEmit",
    "test": "run-s test:*",
    "build": "pkgroll",
    "clean": "rm dist -rf",
    "dev:unit": "vitest --ui --clearScreen=false --reporter=dot",
    "dev:ts": "tsc --project tsconfig.json --noEmit --watch",
    "dev": "run-p dev:*"
  },
  "author": "Nils Knappmeier",
  "license": "MIT",
  "dependencies": {
    "@dom-preview/server": "0.2.2",
    "@dom-preview/ui": "0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "9.3.0",
    "@testing-library/dom": "10.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/jsdom": "21.1.6",
    "@types/node": "20.12.11",
    "@vitest/ui": "1.6.0",
    "jsdom": "24.0.0",
    "npm-run-all": "4.1.5",
    "pkgroll": "2.0.2",
    "typescript": "5.4.5",
    "typescript-eslint": "7.8.0",
    "vitest": "1.6.0"
  }
}
